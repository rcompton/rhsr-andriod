<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_button"
        android:onClick="photoReportButton"
        android:id="@+id/photo_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText0"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/photo_button"
        android:layout_marginTop="11dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foundSpotDefault"
        android:id="@+id/foundSpot"
        android:layout_below="@+id/editText0"
        android:layout_alignLeft="@+id/editText0"
        android:layout_marginTop="18dp"
        android:layout_alignRight="@+id/editText0" />


</RelativeLayout>
